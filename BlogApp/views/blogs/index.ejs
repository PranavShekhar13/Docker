<% include ../partials/header %>
<div class="ui main text container">
    <div class="ui huge header">Blog App </div>
        <div class="ui top attatched segment">
            <div class="ui divided items">
                <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img class="ui centered rounded image" src= "<%= blog.image %>" >
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%=blog._id %>"><%= blog.title%> </a>
                        <div class="meta">
                            <span> <%= moment(blog.createdAt).fromNow() %></span>
                        </div>
                        <div class="description">
                            <p><%= blog.description%>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui inverted violet button" href="/blogs/<%=blog._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                             </a>
                        </div>
                    </div>
                </div>
            <% }); %> 
        </div>
    </div>
</div>




<% include ../partials/footer %>